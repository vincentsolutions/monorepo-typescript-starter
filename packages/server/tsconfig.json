{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@sharedKernel": [
        "../shared-kernel/index"
      ],
      "@server/monorepo": [
        "libs/monorepo/src"
      ],
      "@server/monorepo/*": [
        "libs/monorepo/src/*"
      ]
    }
  },
  "include": [
    "src",
    "../shared-kernel"
  ]
}